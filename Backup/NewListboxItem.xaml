<Window x:Class="WpfApplication1.NewListboxItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add New Item" Height="108" Width="290">
    <Window.CommandBindings>
        <CommandBinding Command="New" Executed="AddNew" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="New"/>
    </Window.InputBindings>
    <Canvas>
        <TextBox Canvas.Left="34" Canvas.Top="9" Height="26
                 " Name="textBox1" Width="204" />
        <Button Canvas.Left="34" Canvas.Top="40" Height="21" Name="button1" Width="99" Command="New">Ok</Button>
        <Button Canvas.Left="140" Canvas.Top="40" Height="21" Name="button2" Width="99" Click="button2_Click">Cancel</Button>
    </Canvas>
</Window>
